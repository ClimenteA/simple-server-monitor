{
    "name": "Is My Server Ok",
    "description": "Get notified when important events happen on your server",
    "version": "0.0.1",
    "manifest_version": 3,
    "author": "Alin Climente",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "unlimitedStorage",
        "offscreen"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}